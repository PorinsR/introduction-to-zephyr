{
  "name": "Zephyr Development Environment for SAM4S",
  "build": {
    "dockerfile": "../Dockerfile.sam4s",
    "context": ".."
  },
  // "mounts": [
  //   "source=/dev/bus/usb,target=/dev/bus/usb,type=bind" // USB support for ST-Link
  // ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "nordic-semiconductor.nrf-devicetree",
        "ms-vscode.hexeditor",
        "mcu-debug.debug-tracker-vscode",
        "marus25.cortex-debug",
        "ms-vscode.vscode-serial-monitor",
        "mcu-debug.rtos-views"
      ]
    }
  },
  "mounts": [
    "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
  ],
  "forwardPorts": [],
  "workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",
  // "postStartCommand": "code --file-uri /zephyr.code-workspace", // Does not work
  "runArgs": [
    "--name",
    "Zephyr-Introduction",
    "--rm",
    "-it",
    "--privileged",
    "-p",
    "2222:22",
    "-p",
    "3333:3333",
    "-p",
    "8800:8800",
    "--security-opt=seccomp=unconfined",
    "--device=/dev/bus/usb",
    "--group-add=plugdev",
    "--group-add=dialout"
  ],
  "remoteUser": "root"
}